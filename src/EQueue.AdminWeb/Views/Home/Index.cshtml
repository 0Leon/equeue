@model EQueue.AdminWeb.Models.BrokerStatisticInfoViewModel
@{
    ViewBag.Title = "首页";
}

<style>
    .col-sm-10 {
        margin-top: 7px;
    }

</style>

<div>
    <form class="form-horizontal" role="form">
        <div class="form-group">
            <label class="col-sm-2 control-label">主题个数：</label>
            <div class="col-sm-10">
                @Model.TopicCount
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-2 control-label">队列个数：</label>
            <div class="col-sm-10">
                @Model.QueueCount
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-2 control-label">消费者组个数：</label>
            <div class="col-sm-10">
                @Model.ConsumerGroupCount
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-2 control-label">消费者个数：</label>
            <div class="col-sm-10">
                @Model.ConsumerCount
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-2 control-label">未消费消息总数：</label>
            <div class="col-sm-10">
                @Model.TotalUnConsumedMessageCount
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-2 control-label">消息Chunk总数：</label>
            <div class="col-sm-10">
                @Model.MessageChunkCount
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-2 control-label">消息最大Chunk：</label>
            <div class="col-sm-10">
                @Model.MessageMaxChunkNum
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-2 control-label">消息最小Chunk：</label>
            <div class="col-sm-10">
                @Model.MessageMinChunkNum
            </div>
        </div>
    </form>
    @using (Html.BeginForm("CreateTopic", "Home", new { }, FormMethod.Post, new { @class = "form-inline", role = "form" }))
    {
        <div class="form-group">
            <label class="sr-only" for="topic"></label>
            <input id="topic" name="topic" type="text" class="form-control" placeholder="Topic" />
        </div>
        <div class="form-group">
            <label class="sr-only" for="initialQueueCount"></label>
            <input id="initialQueueCount" name="initialQueueCount" type="text" class="form-control" placeholder="InitialQueueCount" />
        </div>
        <button type="submit" class="btn btn-default">创建主题</button>
    }
</div>
