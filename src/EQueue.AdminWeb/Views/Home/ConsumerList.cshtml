@model EQueue.AdminWeb.Models.ClusterConsumerListViewModel
@{
    ViewBag.Title = "ConsumerList";
}
<div>
    @using (Html.BeginForm("ConsumerList", "Home", new { clusterName = ViewBag.ClusterName }, FormMethod.Post, new { @class = "form-inline", role = "form" }))
    {
        <div class="form-group">
            <label class="sr-only" for="ClusterName"></label>
            @Html.TextBoxFor(m => m.ClusterName, new { @class = "form-control", placeholder = "ClusterName" })
        </div>
        <div class="form-group">
            <label class="sr-only" for="Group"></label>
            @Html.TextBoxFor(m => m.Group, new { @class = "form-control", placeholder = "Group" })
        </div>
        <div class="form-group">
            <label class="sr-only" for="Topic"></label>
            @Html.TextBoxFor(m => m.Topic, new { @class = "form-control", placeholder = "Topic" })
        </div>
        <button type="submit" class="btn btn-default">查询</button>
    }
    <table class="table table-striped">
        <thead>
            <tr>
                <th width="15%" class="vertical-center">
                    Broker
                </th>
                <th width="10%" class="vertical-center">
                    BrokerAddress
                </th>
                <th width="10%" class="vertical-center">
                    ConsumerGroup
                </th>
                <th width="10%" class="vertical-center">
                    ConsumerId
                </th>
                <th width="10%" class="vertical-center">
                    Topic
                </th>
                <th width="10%" class="text-center vertical-center">
                    QueueId
                </th>
                <th width="10%" class="text-center vertical-center">
                    CurrentOffset
                </th>
                <th width="10%" class="text-center vertical-center">
                    消费进度
                </th>
                <th width="15%" class="text-center vertical-center">
                    消息堆积数
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var line in Model.ConsumerList)
            {
                foreach (var item in line.ConsumerList)
                {
                    <tr>
                        <td class="vertical-center">
                            @line.BrokerInfo.BrokerName<br />
                            @line.BrokerInfo.GroupName<br />
                            @line.BrokerInfo.BrokerRole
                        </td>
                        <td class="vertical-center">
                            @line.BrokerInfo.ProducerAddress<br />
                            @line.BrokerInfo.ConsumerAddress<br />
                            @line.BrokerInfo.AdminAddress
                        </td>
                        <td class="vertical-center">
                            @item.ConsumerGroup
                        </td>
                        <td class="vertical-center">
                            @item.ConsumerId
                        </td>
                        <td class="vertical-center">
                            @item.Topic
                        </td>
                        <td class="text-center vertical-center">
                            @item.QueueId
                        </td>
                        <td class="text-center vertical-center">
                            @item.QueueCurrentOffset
                        </td>
                        <td class="text-center vertical-center">
                            @item.ConsumedOffset
                        </td>
                        <td class="text-center vertical-center">
                            @item.QueueNotConsumeCount
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>
